<h1>Tasks list</h1>
<ul>
  <% @tasks.each do |task| %>

  <li><%= link_to task.title, task_path(task)%> |
    <button><%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?"} %></button></li>
  <% end %>
</ul>

<button><%= link_to "Create task", tasks_new_path %></button>

